<UserControl x:Class="PrintHouse.theme.PasswordField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintHouse.theme"
             mc:Ignorable="d"
             x:Name="root">
    <Grid Margin="0 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<TextBlock Text="{Binding TitlePassword, ElementName=rootPassword}"/>-->
        <Label Content="Password:"></Label>
        <PasswordBox x:Name="Field" Grid.Column="1" PasswordChar="*"></PasswordBox>
    </Grid>
</UserControl>
