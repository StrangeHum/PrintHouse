<Page x:Class="PrintHouse.pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrintHouse.pages"
      xmlns:UC="clr-namespace:PrintHouse.theme"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" x:Name="root">
    <Grid Background="Aqua" Style="{StaticResource SHStyleForForms}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource Foo}">
            <UC:LoginField x:Name="Login"/>
            <UC:PasswordField x:Name="Password"/>
            <Button x:Name="ButtonLogin" Content="Войти" Click="ButtonLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
